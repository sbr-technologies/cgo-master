<%= render :partial => "admin/layouts/head" %>

<body>
  <!-- #doc4 = 974px width, centered, yui-t6: 2 cols 300px on right. -->
  <div id="doc4" class="yui-t6">
    <div id="hd">
      <%= render :partial => "admin/layouts/hd" %>
    </div>

    <div id="bd">
      <div id="yui-main">
        <div id="content-container" class="yui-b"  >

          <div id="page-header">
            <div class="page-header-links"><%= yield :page_header_links -%></div>
            <h1><%= yield :page_title %></h1>
          </div>
          <div id="page-content">
            <%= raw flashers %>
            <%= yield %>
          </div>
        </div>
        <div style="background: url(/images/bottom-bg.gif) no-repeat top right; height: 7px;margin-right: 300px;"></div>
      </div>

      <div id="page-sidebar" class="yui-b">
        <%= yield :right %>
      </div>

    </div><!-- bd -->

    <%= render :partial => "admin/layouts/ft" %>

  </div><!-- doc4 -->

  <script language="JavaScript">

    // FIX page_sidebar height
    YAHOO.example.fixSideBar = function(){
      var outerContainer = YAHOO.util.Dom.get('doc4') || YAHOO.util.Dom.get('doc');

      var mainContainer = YAHOO.util.Dom.get('yui-main');
      var sideBar = YAHOO.util.Dom.get('page_sidebar');

      var mainContainerHeight = parseInt(YAHOO.util.Dom.getStyle(mainContainer, 'height') );
      var sideBarHeight = parseInt(YAHOO.util.Dom.getStyle(sideBar, 'height'));

      if(mainContainer && sideBar) {
        if(mainContainerHeight < sideBarHeight) {
          YAHOO.util.Dom.setStyle("content_container", 'height', sideBar.offsetHeight + 'px');
        }
        YAHOO.util.Dom.setStyle(sideBar,'height',mainContainer.offsetHeight + 'px');
      };

    }();


    var cornersObj;
    var smallCornersObj;

    document.observe("dom:loaded", function() {
      settings = {
        tl: { radius: 6 },
        tr: { radius: 6 },
        bl: { radius: 6 },
        br: { radius: 6 },
        antiAlias: true,
        autoPad: false
      };

      settings2 = {
        tl: { radius: 3 },
        tr: { radius: 3 },
        bl: { radius: 3 },
        br: { radius: 3 },
        antiAlias: true,
        autoPad: false
      };

      cornersObj = new curvyCorners(settings, ".round-corners");
      smallCornersObj = new curvyCorners(settings2, ".small-round-corners");

      cornersObj.applyCornersToAll();
      smallCornersObj.applyCornersToAll();

    });

  </script>

</body>
</html>
