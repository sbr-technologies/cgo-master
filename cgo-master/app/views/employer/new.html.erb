<% content_for :page_title do %>
  New Employer Registration
<% end %>

<% unless @employer.errors.empty? && @recruiter.errors.empty? && @address.errors.empty? %>
  <div id="errorExplanation" class="errorExplanation">
    <h2>Errors prevented saving your account</h2>
    <p>Please correct the errors indicated on each field and try again<p>
    <%= @employer.errors.inspect %>
    <%= @recruiter.errors.inspect %>
    <%= @address.errors.inspect %>
  </div>
<% end %>

<%= error_handling_form_for @employer, :html => {:id => "employerform" } do |f| %>

  <%= error_handling_fields_for @recruiter do |recruiter_form| %>
    <%= render :partial => "recruiter/form", :object => recruiter_form %>
  <% end %>

  <%= render :partial => "form", :object => f -%>

  <div id="button-bar" class="button-bar" style="display:none">
    <a class="button" href="#" onclick="$('employerform').submit(); return false;"><span>save</span></a>
    <div>or <%= link_to "Cancel", employers_path, :class=>"cancel"%></div>
  </div>

<% end %>
