<% content_for :page_title do %>
  <%= @employer.name -%>
<% end %>

<% content_for :page_header_links do %>
	<%= link_to "Save", "#", :onclick => "$('employerform').submit(); return false" -%>&nbsp;|&nbsp;
	<%= link_to "Cancel", employer_recruiters_path(:employer_id => current_user.employer.id) -%>
<% end %>

<%= error_messages_for @employer %>

<%= error_handling_form_for @employer, :html => {:id => "employerform" } do |f| %>

  <%= render :partial => "form", :object => f -%>

	<script type='text/javascript'>

				document.observe("dom:loaded", function() {
						$('continue_button').hide();
						$('company_information').show();
				});

	</script>

  <div class="button-bar">
    <a class="button" href="#" onclick="$('employerform').submit(); return false;"><span>save</span></a>
    <div>or <%= link_to "Cancel", employers_path, :class=>"cancel"%></div>
  </div>

<% end %>
