<% content_for :page_title do %>
  Edit <%= @position.title %>
<% end %>

<% content_for :head do %>
  <%= stylesheet_link_tag 'bootstrap.min' %>
<% end %>

<% unless @position.errors.empty? %>
  <div id="errorExplanation" class="errorExplanation">
    <p style="background:#BD0000; color: white; padding: 5px; margin-bottom: 10px;">There were problems with the following fields:</p>
    <ul>
      <% @position.errors.each do |error| %>
        <li><%= "#{error[0].to_s.humanize} #{error[1]}" %></li>
      <% end %>
    </ul>
  </div>
  <br/>
<% end %>

<%= form_for @position, :html => {:class => "form-horizontal"} do |f| %>

  <%= render :partial => "form", :locals => {:f => f} %>

  <div style="margin-top: 1em; margin-right: 0.5em; text-align: right; padding: 10px;">
    <%= f.submit "Save", :class => "btn btn-primary" %>
    <%= link_to "Cancel", positions_path, :class => "btn btn-link" %>
  </div>

<% end %>



